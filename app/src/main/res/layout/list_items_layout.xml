<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivItemImg"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/item_name" />


    <ImageButton
        android:id="@+id/ibwishIconTiny"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ivItemImg"
        app:srcCompat="@drawable/orange_paw"
        tools:ignore="ImageContrastCheck"/>

    <ImageButton
        android:id="@+id/ibcartIconTiny"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/ivItemImg"
        android:layout_below="@id/ibwishIconTiny"
        app:srcCompat="@drawable/orange_cart"
        tools:ignore="ImageContrastCheck"/>


    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivItemImg"
        android:layout_alignStart="@id/ivItemImg"
        android:layout_alignParentBottom="false"
        android:text="@string/item_name"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvItemName"
        android:layout_alignStart="@id/ivItemImg"
        android:text="@string/Price"
        android:textAlignment="center"
        android:textSize="15sp" />


</RelativeLayout>